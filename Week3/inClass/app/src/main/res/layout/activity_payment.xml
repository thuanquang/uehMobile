<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xin chào tung\nHãy đăng ký môn học"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewPaymentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="24dp"
        android:text="Chọn hình thức Thanh toán"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/radioGroupPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPaymentLabel"
        android:layout_marginTop="12dp">

        <RadioButton
            android:id="@+id/radioBitcoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitcoin" />

        <RadioButton
            android:id="@+id/radioEthereum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ethereum" />

    </RadioGroup>

    <ImageView
        android:id="@+id/imageViewCrypto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:contentDescription="Cryptocurrency icon"
        android:src="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/imageButtonExit"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Exit button"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

</RelativeLayout>
